#passthrough mode
mode "passthrough" {
    bindsym $mod+Escape mode "default"
}
bindsym $mod+Escape mode "passthrough"
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown (f) fancylock.sh
mode "$mode_system" {
    bindsym l exec --no-startup-id slimlock, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id slimlock && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym f exec --no-startup-id /home/kalli/bin/fancylock.sh, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff, mode "default"

    # back to normal: Enter or Escapj
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Pause mode "$mode_system"

