        urgent_workspace   $COLOR_STATUS_URGENT $COLOR_STATUS_RED2 $COLOR_STATUS_TEXT
    }
}

# Media keys
#side button
bindsym $mod+o exec pactl set-sink-mute 1 toggle
# fn+f1
bindsym XF86AudioMute exec pactl set-sink-mute 1 toggle
# fn+f2 and side
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 1 -10%
# fn+f3 and side
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 1 +10%
# fn+f8
# bindsym ctrl+alt+tab
# fn+10 projector
set $mode_projector Extend left/below/above/right (h/j/l/k), Mirror (m), turn off (x)
mode "$mode_projector" {
    bindsym x exec xrandr --output HDMI1 --off; mode "default"
    bindsym h exec xrandr --output HDMI1 --auto --left-of eDP1; mode "default"
    bindsym j exec xrandr --output HDMI1 --auto --below eDP1; mode "default"
    bindsym k exec xrandr --output HDMI1 --auto --above eDP1; mode "default"
    bindsym l exec xrandr --output HDMI1 --auto --right-of eDP1; mode "default"
    bindsym m exec xrandr --output HDMI1 --auto --output eDP1 --auto --same-as HDMI1; mode "default"
    bindsym $mod+p mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+p mode "$mode_projector"

# fn+f11
bindsym XF86MonBrightnessDown exec xbacklight -10% -time 0
# fn+f12
bindsym XF86MonBrightnessUp exec xbacklight +10% -time 0
# PrtSc
bindsym Print exec scrot '%y-%m-%d-%H:%m:%S_$wx$h.png'  -e 'mv $f ~/Pictures/screens/'
bindsym --release $mod+Print exec scrot -s '%y-%m-%d-%H:%m:%S_$wx$h.png'  -e 'mv $f ~/Pictures/screens/$f'

# programs
bindsym $mod+Shift+g exec thunar
